  <% include ./partials/header %>
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header fadeinimage" style="background-image: url('img/john-towner-154060_small.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-lg-offset-0 col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4 col-xs-6 col-xs-offset-3">
                  <img class="img-circle profilepic" src='img/harsh2.jpg'>
                </div>
                <div class="col-lg-7 col-lg-offset-0  col-xs-10 col-xs-offset-1">
                    <div class="site-heading">
                        <span class="subheading">Hi there! I am </span>
                        <div style="margin: 20px 0;"></div>
                        <h1>Harsh Fadnavis</h1>

                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <% blogposts.forEach(function(blogpost){ %>
                  <div class="post-preview">
                      <a href="/blogposts/<%= blogpost.id %>">
                          <h2 class="post-title">
                              <%= blogpost.title %>
                          </h2>
                          <h3 class="post-subtitle">
                              <p><%= blogpost.fulltext.substring(0,100) %>...</p>
                          </h3>
                      </a>
                      <p class="post-meta">Posted by <a href="#">Start Bootstrap</a> on September 24, 2014</p>
                  </div>
                  <hr>
                <% }); %>

                <!-- Pager -->
                <ul class="pager">
                    <li class="next">
                        <a href="#">Older Posts &rarr;</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <hr>

<% include ./partials/footer %>
