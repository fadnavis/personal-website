<% include ./partials/header %>

<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h2>First Time? Register here</h2>
                    <!-- <span class="subheading">Learn-Build-Repeat</span> -->
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form id="contactForm" class="" action="/register" method="POST">
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
              <label>Username</label>
              <input class="form-control "type="text" name="username" placeholder="Username"
              required data-validation-required-message="Please enter your name.">
              <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group control">
            <label style="text-align:center">Password</label>
            <input class="form-control" type="password" name="password" placeholder="Password"
            required data-validation-required-message="Please enter your name.">
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="row control-group" style="margin-top:10px;">
          <div class="form-group col-md-4 col-md-offset-4 col-xs-12">
            <button class="btn btn-default" type="submit" name="button">Sign Up</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>
